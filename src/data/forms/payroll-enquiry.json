{
  "title": "Payroll Enquiry",
  "description": "Please use this form for any Payroll related enquiries.",
  "fields": [
    {
      "id": "related-to",
      "type": "select",
      "label": "What does your enquiry relate to?",
      "props": {
        "options": [
          "Incorrect Pay",
          "Missing Expense",
          "Change of Bank Details",
          "Change of Address",
          "Other"
        ]
      }
    },
    {
      "id": "date",
      "type": "date",
      "label": "Date of payslip being queried (if applicable)"
    },
    {
      "id": "query",
      "type": "textarea",
      "label": "Query"
    }
  ],
  "rules": [
    {
      "assert": {
        "check": "exists",
        "fieldId": "date"
      },
      "if": {
        "check": "value-in",
        "fieldId": "related-to",
        "args": {
          "values": ["Incorrect Pay", "Missing Expense"]
        }
      }
    }
  ]
}
